<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.atp.requester"
    android:versionCode="1"
    android:versionName="1.0"
     >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="7" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/ATP"
        >
        <activity
            android:screenOrientation="portrait"
            android:name="de.atp.requester.StartActivity"
            android:label="@string/ATP" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="de.atp.requester.TimetableActivity"
            android:label="@string/ATP" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="de.atp.requester.SurveyActivity"
            android:label="@string/ATP" >
        </activity>

        <service android:name="de.atp.controller.Alarm" />

        <activity
            android:screenOrientation="portrait"
            android:name="de.atp.requester.InfoActivity"
            android:label="@string/ATP" >
        </activity>
    </application>

</manifest>